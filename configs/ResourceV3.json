{
    "description": "Hyper params for Resource Placement problem",
    
    "trainer_config": {
        "description": "Trainer function configs.",
        "n_iterations": 40000,
        "n_steps_to_update": 30,

        "export_stats": {
            "export_stats": true,
            "folder": "training"
        },

        "store_model_weights": {
            "export_weights": true,
            "folder": "model",
            "filename": "actor"
        }
    },

    "tester_config": {
        "description": "Testing function configs.",

        "show_per_test_stats": true,
        "show_inference_progress": true,
        "show_solutions": false,
        "show_detailed_solutions": false,
        "plot_attentions": false,
        "batch_size": 1,
        
        "testbed" : {
            "num_tests": 10,
            "node_configs": {
                "min": 5,
                "max": 50,
                "step": 5
            },
            "node_available_resources": {
                "min": 0,
                "max": 100,
                "step": 10
            },
            "request_configs": {
                "min": 10,
                "max": 100,
                "step": 10
            }
        },

        "profiles_sample_size": 2,
        "node_sample_size": 3,
        
        "heuristic": {
            "dominant_resource": {
                "generate_params_combos": true,
                "resource_sort_descending": true,
                "node_sort_descending": true
            },
            "random": {}
        },

        "export_stats": {
            "global_stats": {
                "export_stats": true,
                "folder": "tests",
                "filename": "test"
            },
            "per_problem_stats": {
                "export_stats": false,
                "folder": "tests/per_instance"
            }
        }
    },

    "tuner_config": {
        "description": "Testing function configs.",
        "update_resource_decoder_input": false,
        "num_tests": 1000,
        "show_per_test_stats": true,
        "show_inference_progress": false,
        "show_solutions": false,
        "show_detailed_solutions": false,
        "plot_attentions": false,
        "batch_size": 1,
        "profiles_sample_size": 20,
        "node_sample_size": 10,
        "num_episodes": 1,
        
        "heuristic": {
            "dominant_resource": {
                "generate_params_combos": true,
                "resource_sort_descending": true,
                "node_sort_descending": true
            },
            "random": {}
        },

        "export_stats": {
            "global_stats": {
                "export_stats": true,
                "location": "./results/resource_v3",
                "filename": null
            },
            "per_problem_stats": {
                "export_stats": false,
                "location": "./results/resource_v3"
            }
        }
    },

    "env_config": {
        "description": "Environment configs.",
        
        "batch_size": 256,
        "mask_nodes_in_mha": false,
        "generate_request_on_the_fly": false,
        
        "normalization_factor": 100,
        "decimal_precision": 2,

        "num_features": 3,
        "num_profiles": 5000,

        "profiles_sample_size": 20,
        "node_sample_size": 10,
        
        "EOS_CODE": -2,
        "req_min_val": 1,
        "req_max_val": 30,
        
        "node_min_val": 0,
        "node_max_val": 100,

        "reward": {
            "type": "reduced_node_usage",
            "greedy": {},
            "single_node_dominant": {
                "rejection_penalty": -2
            },
            "global_dominant": {
                "rejection_penalty": -2
            },
            "reduced_node_usage": {
                "rejection_penalty": -2,
                "use_new_node_penalty": -1
            },
            "gini": {}
        }
    },

    "tpc": {
        "description": "Double Transformer Pointer Critic Agent configs.",
        "agent_config": {

            "gamma": 0.99,
            "values_loss_coefficient": 1.0,
            "entropy_coefficient": 0.1,
            "stochastic_action_selection": true,
            
            "actor": {
                "use_default_initializer": false,
                "num_layers": 1,
                "dim_model": 128,
                "num_heads": 8,
                "inner_layer_dim": 512,
                "encoder_embedding_time_distributed": true,
                "attention_dense_units": 128,
                "logit_clipping_C": 10.0,

                "learning_rate": 0.0001
            },

            "critic": {
                "use_default_initializer": false,
                "num_layers": 2,
                "dim_model": 128,
                "num_heads": 8,
                "inner_layer_dim": 512,
                "encoder_embedding_time_distributed": true,
                "last_layer_units": 128,
                "last_layer_activation": "linear",

                "learning_rate": 0.0001
            }
        }
    }
}