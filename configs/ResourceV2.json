{
    "description": "Hyper params for Multiple Knapsack problem",
    
    "trainer_config": {
        "description": "Trainer function configs.",
        "n_iterations": 0,
        "n_steps_to_update": 20
    },

    "tester_config": {
        "description": "Testing function configs.",
        "num_tests": 1,
        "show_info": false,
        "batch_size": 1,
        "profiles_sample_size": 20,
        "node_sample_size": 5,
        "num_episodes": 1,
        "num_iterations_before_node_reset": 1,
        
        "heuristic": {
            "type": "greedy",
            "greedy": {
                "request_sorting_order": "ASC",
                "node_sorting_order": "DESC",
                "denormalize": true
            }
        },

        "export_stats": {
            "location": "./results/resource_v2"
        }
    },

    "env_config": {
        "description": "Environment configs.",
        
        "batch_size": 64,

        "num_features": 3,

        "num_profiles": 200,
        "num_nodes": 50,

        "profiles_sample_size": 20,
        "node_sample_size": 5,
        
