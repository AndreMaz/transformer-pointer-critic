{
    "description": "Hyper params for Multiple Knapsack problem",
    
    "trainer_config": {
        "description": "Trainer function configs.",
        "n_iterations": 10,
        "n_steps_to_update": 30,

        "export_stats": {
            "export_stats": true,
            "folder": "training"
        },

        "store_model_weights": {
            "export_weights": true,
            "folder": "model",
            "filename": "actor"
        }
    },

    "tester_config": {
        "description": "Testing function configs.",

        "show_per_test_stats": true,
        "show_inference_progress": true,
        "show_solutions": false,
        "show_detailed_solutions": false,
        "plot_attentions": false,
        "batch_size": 1,
        
        "testbed" : {
            "num_tests": 10,
            "bin_configs": {
                "min": 5,
                "max": 10,
                "step": 5
            },
            "bin_available_capacities": {
                "min": 90,
                "max": 100,
                "step": 10
            },
            "item_configs": {
                "min": 90,
                "max": 100,
                "step": 10
            }
        },

        "profiles_sample_size": 2,
        "node_sample_size": 3,
        
        "heuristic": {
            "waste_reduction": {
                "generate_params_combos": true,
                "item_sort_descending": true,
                "bin_sort_descending": true
            },
            "random": {},
            "or_tools": {
                "time_limit_ms": 10000,
                "num_threads": 4
            }
        },

        "export_stats": {
            "global_stats": {
                "export_stats": true,
                "folder": "tests",
                "filename": "test"
            },
            "per_problem_stats": {
                "export_stats": false,
                "folder": "tests/per_instance"
            }
        }
    },

    "tuner_config": {
        "description": "Testing function configs.",
        "update_resource_decoder_input": false,
        "num_tests": 1000,
        "show_per_test_stats": true,
        "show_inference_progress": false,
        "show_solutions": false,
        "show_detailed_solutions": false,
        "plot_attentions": false,
        "batch_size": 1,
        "profiles_sample_size": 20,
        "node_sample_size": 10,
        "num_episodes": 1,
        
        "heuristic": {
            "dominant_resource": {
                "generate_params_combos": true,
                "resource_sort_descending": true,
                "node_sort_descending": true
            },
            "random": {}
        },

        "export_stats": {
            "global_stats": {
                "export_stats": true,
                "location": "./results/resource_v3",
                "filename": null
            },
            "per_problem_stats": {
                "export_stats": false,
                "location": "./results/resource_v3"
            }
        }
    },

    "env_config": {
        "description": "Environment configs.",
        
        "batch_size": 2,
        "mask_nodes_in_mha": false,
        "generate_items_on_the_fly": false,
        
        "normalization_factor": 100,
        "decimal_precision": 2,

        "num_features": 2,
        "item_set": 5000,

        "item_sample_size": 2,
        "bin_sample_size": 3,
        
        "EOS_CODE": -2,
        
        "item_min_value": 70,
        "item_max_value": 80,

        "item_min_weight": 1,
        "item_max_weight": 30,
        
        "bin_min_capacity": 90,
        "bin_max_capacity": 100,

        "reward": {
            "type": "greedy",
            "greedy": {}
        }
    },

    "tpc": {
        "description": "Double Transformer Pointer Critic Agent configs.",
        "agent_config": {

            "gamma": 0.99,
            "values_loss_coefficient": 1.0,
            "entropy_coefficient": 0.1,
            "stochastic_action_selection": true,
            
            "actor": {
                "use_default_initializer": false,
                "num_layers": 1,
                "dim_model": 128,
                "num_heads": 8,
                "inner_layer_dim": 512,
                "encoder_embedding_time_distributed": true,
                "attention_dense_units": 128,
                "logit_clipping_C": 10.0,

                "learning_rate": 0.0001
            },

            "critic": {
                "use_default_initializer": false,
                "num_layers": 2,
                "dim_model": 128,
                "num_heads": 8,
                "inner_layer_dim": 512,
                "encoder_embedding_time_distributed": true,
                "last_layer_units": 128,
                "last_layer_activation": "linear",

                "learning_rate": 0.0001
            }
        }
    }
}